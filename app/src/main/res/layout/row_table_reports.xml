<?xml version="1.0" encoding="utf-8"?>


    <TableRow xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:paddingHorizontal="10dp"
        android:background="@color/Complementary_light_Color">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="10dp"
            android:background="@color/primary_bg_Color"
            android:paddingHorizontal="20dp"
            >

            <LinearLayout
                android:layout_width="231dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_tt_type_risk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/jost_bold"
                    android:text="Riesgo"
                    android:textColor="@color/Color_secondary_black"
                    android:textSize="22dp" />

                <TextView
                    android:id="@+id/tv_tt_area_risk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="-10dp"
                    android:fontFamily="@font/jost_semibold"
                    android:textColor="@color/Color_secondary_black"
                    android:text="laboratorio"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tv_tt_zone_risk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/jost_semibold"
                    android:textColor="@color/Color_secondary_black"
                    android:text="salon"
                    android:textSize="16dp" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_see_report"
                android:layout_width="66dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1"
                android:textColor="@color/primary_bg_Color"
                android:backgroundTint="@color/color_Sena"
                android:text="@string/txt_btn_watch_report" />
        </LinearLayout>
    </TableRow>