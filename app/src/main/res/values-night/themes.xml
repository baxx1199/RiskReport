<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RiskReport" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/Color_secondary_black</item>
        <item name="colorPrimaryVariant">@color/color_gray</item>
        <item name="colorOnPrimary">@color/Color_primary_black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/Color_secondary_black</item>
        <item name="colorSecondaryVariant">@color/Complementary_light_Color</item>
        <item name="colorOnSecondary">@color/Color_primary_black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/Color_secondary_black</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="ThemeOverlay.RiskReport.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_900</item>
        <item name="fullscreenTextColor">@color/light_blue_A400</item>
    </style>
</resources>